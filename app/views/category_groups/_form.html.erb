<%= form_with(model: category_group, local: true) do |form| %>
  <% if category_group.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(category_group.errors.count, "error") %>
        <%= t("prohibited_this_category_group_from_being_saved") %>:</h2>
      <ul>
        <% category_group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="stack">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="btn-group">
    <%= link_to t("go_back"), :back, class: "btn" %>
    <%= form.submit t("submit"), class: "btn" %>
  </div>
<% end %>
