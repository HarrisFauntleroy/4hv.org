<%= form_with(model: forum, local: true) do |form| %>
  <%= render(ErrorMessagesComponent.new(resource: forum)) %>

  <div class="stack">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="stack">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <%= form.collection_select :category_id, Category.all, :id, :name %>

  <div class="btn-group">
    <%= link_to t("go_back"), :back, class: "btn" %>
    <%= form.submit t("submit"), class: "btn" %>
  </div>
<% end %>
