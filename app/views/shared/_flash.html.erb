<% if flash[:notice] %>
  <p class="flash flash-notice"><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
  <p class="flash flash-alert""><%= flash[:alert] %></p>
<% end %>
<% if flash[:error] %>
  <p class="flash flash-error"><%= flash[:error] %></p>
<% end %>
<% if flash[:success] %>
  <p class="flash flash-success"><%= flash[:success] %></p>
<% end %>
