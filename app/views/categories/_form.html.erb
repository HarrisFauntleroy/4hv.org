<%= form_with(model: category, local: true) do |form| %>
  <%= render(ErrorMessagesComponent.new(resource: category)) %>

  <div class="stack">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="btn-group">
    <%= link_to t("go_back"), :back, class: "btn" %>
    <%= form.submit t("submit"), class: "btn" %>
  </div>
<% end %>
