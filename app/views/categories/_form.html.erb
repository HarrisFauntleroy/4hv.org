<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(category.errors.count, "error") %>
        <%= t("prohibited_this_category_from_being_saved") %>:</h2>
      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="stack">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="stack">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <%= form.collection_select :category_group_id, CategoryGroup.all, :id, :name %>

  <div class="btn-group">
    <%= link_to t("go_back"), :back, class: "btn" %>
    <%= form.submit t("submit"), class: "btn" %>
  </div>
<% end %>
